<div align="center">
  <h2><%= @board.title %></h2>

  <h5><%= @board.description %></h5>
  <% if @user == @board.owner %>

    <%= link_to "Edit", edit_board_path(@board) %><br>
    <%= link_to "Delete",board_path(@board), :method => :delete, data: {confirm: "Are you sure?"} %>

  <% end %>
</div>

<hr>
<div align="center">
  <strong><%= link_to "VIEW ALL TOPICS", board_topics_path(@board) %></strong><br>
  <% if @user %>
    <strong><%= link_to "CREATE NEW TOPIC", new_board_topic_path(@board) %></strong>
  <% end %>
</div>
<% @topics.each do |topic| %>
  <small><strong>ID: <%= topic.id %> | <%= topic.created %> | <%= topic.num_of_responses %> R</strong></small>
  <p><%= topic.title %></p>
  <small><%= link_to "Reply", board_topic_path(@board, topic) %></small><br>
  <hr>
<% end %>
