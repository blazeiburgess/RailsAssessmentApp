<h5><%= topic.title %></h5>
<small><strong>ID: <%= topic.id %> | <%= topic.created %></strong></small>
<p><%= Rinku.auto_link(simple_format(topic.body), :all, 'target="_blank"').html_safe %></p>
<% if user == topic.user || user == board.owner %>
  <%= link_to "Edit", edit_board_topic_path(board,topic) %>
  <%= link_to "Delete", board_topic_path(board,topic), :method => :delete, data: {confirm: "Are you sure?"} %>
<% end %>
