<%= form_for [board, topic]  do |f| %>
  <%= render 'layouts/error_messages', :target => topic %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.hidden_field :user_id, value: user.id %>
  <%= f.hidden_field :board_id, value: board.id %>

  <%= f.submit %>
<% end %>
