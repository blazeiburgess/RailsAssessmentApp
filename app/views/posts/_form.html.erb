<%= form_for(@post) do |f| %>
  <%= render 'layouts/error_messages', :target => @post %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.hidden_field :topic_id, value: topic.id %>
  <%= f.hidden_field :user_id, value: user.id %>
  
  <%= f.submit %>
<% end %>


